  </head>

  <body>

       <% if user_signed_in? %>
          <li class="">
            <%= link_to "仮Home", new_user_registration_path %>
          </li>
          <li class="">
            <%= link_to "Users", users_path %>
          </li>
           <li class="">
          <%= link_to "Books", books_path %>
          </li>
           <li class="">
            <%= link_to "logout", destroy_user_session_path, method: :delete %>
